{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "overrides": [
        {
            "files": ["**/*.svelte"],
            "processor": "svelte3/svelte3"
        }
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["svelte3", "prettier"],
    "rules": {
        "prettier/prettier": "error"
    }
}
